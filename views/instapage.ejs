<% layout('./layouts/boilerplate') %>

<h2>Instagram Media Page</h2>

<% for (let media of medias) { %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <% if (media.media_type === 'VIDEO') { %>
                    <video class="img-fluid" src="<%= media.media_url %>" alt=""></video>
                <% } else { %>
                    <img class="img-fluid" src="<%= media.media_url %>" alt=""></img>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= media.caption %>
                    </h5>
                    <h5 class="card-title">
                        <%= media.media_type %>
                    </h5>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= media.username %>
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
<% } %> 